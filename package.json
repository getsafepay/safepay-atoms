{
    "name": "@sfpy/atoms",
    "version": "0.0.2",
    "description": "Atomic building blocks to build custom payment interfaces",
    "typings": "types/index.d.ts",
    "keywords": [
        "safepay",
        "payments"
    ],
    "author": "Safepay",
    "type": "module",
    "main": "dist/react/atoms/index.js",
    "module": "dist/react/atoms/index.js",
    "types": "dist/react/atoms/index.d.ts",
    "scripts": {
        "clean": "rimraf dist",
        "serve": "run-s clean build dev",
        "dev": "serve",
        "compile:components": "parcel build --no-cache --target components",
        "compile:react": "tsc -p tsconfig.react.json",
        "compile": "run-s compile:components compile:react",
        "build": "run-s clean compile",
        "check": "tsc --noEmit",
        "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
        "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,scss,md}\""
    },
    "components": "dist/index.js",
    "react": "dist/react/index.js",
    "targets": {
        "components": {
            "source": "src/index.ts",
            "context": "browser",
            "optimize": true,
            "isLibrary": true,
            "sourceMap": false,
            "distDir": "./dist/components"
        }
    },
    "devDependencies": {
        "@parcel/packager-ts": "^2.14.4",
        "@parcel/transformer-inline-string": "^2.14.4",
        "@parcel/transformer-typescript-types": "^2.14.4",
        "@types/react": "^18.2.48",
        "@types/react-dom": "^18.2.18",
        "@typescript-eslint/eslint-plugin": "^8.26.0",
        "@typescript-eslint/parser": "^8.26.0",
        "npm-run-all": "^4.1.5",
        "parcel": "^2.14.4",
        "prettier": "^3.5.3",
        "rimraf": "^6.0.1",
        "serve": "^14.2.4",
        "typescript": ">=3.0.0",
        "typescript-plugin-css-modules": "^5.0.2"
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "uuid": "^9.0.1"
    },
    "prettier": {
        "printWidth": 120,
        "singleQuote": true,
        "bracketSameLine": true,
        "trailingComma": "es5"
    },
    "exports": {
        ".": {
            "types": "./dist/react/atoms/index.d.ts",
            "import": "./dist/react/atoms/index.js",
            "require": "./dist/react/atoms/index.js"
        }
    }
}