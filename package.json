{
  "name": "@sfpy/atoms",
  "version": "0.0.1",
  "description": "Atomic building blocks to build custom payment interfaces",
  "main": "dist/main.js",
  "type": "module",
  "keywords": [
    "safepay",
    "payments"
  ],
  "author": "Safepay",
  "scripts": {
    "clean": "rimraf dist",
    "serve": "run-s clean build dev",
    "dev": "serve",
    "build": "run-s clean compile",
    "compile": "parcel build --no-cache",
    "check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,scss,md}\""
  },
  "targets": {
    "library": {
      "source": "src/index.ts",
      "context": "browser",
      "optimize": true,
      "isLibrary": true,
      "sourceMap": false
    }
  },
  "devDependencies": {
    "@parcel/packager-ts": "2.11.0",
    "@parcel/transformer-inline-string": "2.13.3",
    "@parcel/transformer-typescript-types": "2.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.11.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "serve": "^14.2.4",
    "typescript": ">=3.0.0",
    "typescript-plugin-css-modules": "^5.0.2"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.1"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "bracketSameLine": true,
    "trailingComma": "es5"
  }
}
