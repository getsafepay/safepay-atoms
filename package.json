{
    "name": "@sfpy/atoms",
    "version": "0.0.9",
    "description": "Atomic building blocks to build custom payment interfaces",
    "type": "module",
    "keywords": [
        "safepay",
        "payments"
    ],
    "author": "Safepay",
    "scripts": {
        "clean": "rimraf dist",
        "serve": "run-s clean build dev",
        "dev": "serve",
        "build": "run-s clean build:components build:react build:styles",
        "build:components": "tsup --config tsup.components.config.ts",
        "build:react": "tsup --config tsup.react.config.ts",
        "build:styles": "postcss src/styles/index.css -o dist/styles/index.css",
        "check": "tsc --noEmit",
        "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
        "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,scss,md}\""
    },
    "components": "dist/components/index.js",
    "react": "dist/react/index.js",
    "devDependencies": {
        "@types/react": "^18.2.48",
        "@types/react-dom": "^18.2.18",
        "@typescript-eslint/eslint-plugin": "^8.26.0",
        "@typescript-eslint/parser": "^8.26.0",
        "autoprefixer": "^10.4.21",
        "cssnano": "^7.0.6",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.5.3",
        "postcss-cli": "^11.0.1",
        "postcss-import": "^16.1.0",
        "postcss-nested": "^7.0.2",
        "prettier": "^3.5.3",
        "rimraf": "^6.0.1",
        "serve": "^14.2.4",
        "tsup": "^8.4.0",
        "typescript": ">=3.0.0",
        "typescript-plugin-css-modules": "^5.0.2"
    },
    "dependencies": {
        "nanoid": "^5.1.5"
    },
    "prettier": {
        "printWidth": 120,
        "singleQuote": true,
        "bracketSameLine": true,
        "trailingComma": "es5"
    },
    "peerDependencies": {
        "react": ">=18.2.0 <20.0.0",
        "react-dom": ">=18.2.0 <20.0.0"
    },
    "main": "./dist/react/index.js",
    "module": "./dist/react/index.js",
    "types": "./dist/react/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/react/index.js",
            "types": "./dist/react/index.d.ts"
        },
        "./styles": "./dist/styles/index.css"
    }
}
